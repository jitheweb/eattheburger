<div class="row">
  <div class="col s6">
    <div class="card-panel grey lighten-1">
      <h4 class="black-text text-darken-4 flow-text">Burgers That Are Not Eaten</h4>
    </div>
   <form class="create-form black-text text-darken-4">

  <div class="form-group">
    <label for="bg">new burger</label>
    <input type="text" id="bg" name="name">
  </div>
    <button type="submit">order</button>
</form>

    <ul class="collection">
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="col s6">
    <div class="card-panel grey lighten-1">
      <h4 class="black-text text-darken-4 flow-text">Burgers That Are Eaten</h4>
    </div>
    <ul class="collection">
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
    </ul>
  </div>
</div>